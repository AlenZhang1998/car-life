.city-page { padding: 16rpx 20rpx 40rpx; }
.search { display:flex; align-items:center; gap: 16rpx; }
.search-input { flex:1; height: 72rpx; background:#f5f6f8; border-radius: 12rpx; padding: 0 20rpx; }
.relo { color:#007aff; }
.current { padding: 16rpx 0; color:#666; }
.current .val { color:#222; margin-left: 8rpx; }
.group { margin-top: 8rpx; }
.letter { padding: 10rpx 0; color:#999; font-size: 24rpx; }
.row { padding: 26rpx 8rpx; background:#fff; border-bottom: 1px solid #f2f2f2; }
.row:last-child { border-bottom: none; }

