<view class="container">
  <view class="card">
    <view class="row">
      <view>版本</view>
      <view class="muted">{{version}}</view>
    </view>
  </view>

  <view class="space"></view>

  <view class="card">
    <view class="row" bindtap="onExport">
      <view>导出数据(JSON)</view>
      <view class="muted">复制到剪贴板</view>
    </view>
    <view class="space-sm"></view>
    <view class="row danger" bindtap="onClearAll">
      <view>清空所有数据</view>
    </view>
  </view>
</view>

